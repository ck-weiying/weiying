<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/special_list_Linear"
    android:background="@mipmap/bg_colorful"
    tools:context=".view.activity.SpecialListActivity">
    <include layout="@layout/commen_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/special_SmartRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.scwang.smartrefresh.header.DeliveryHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/special_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false">
        </android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout> 
</LinearLayout>