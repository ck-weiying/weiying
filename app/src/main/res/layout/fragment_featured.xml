<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/featured_nslv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">
            <RelativeLayout
                android:id="@+id/featured_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250">
                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/xbanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_250"
                    app:AutoPlayTime="3000"
                    app:pointNormal="@drawable/shape_normal"
                    app:pointSelect="@drawable/selector_banner_point"
                    app:pointsPosition="CENTER"
                    app:tipTextColor="#FFFFFFFF"
                    app:tipTextSize="@dimen/dp_16"/>
                <RelativeLayout
                    android:id="@+id/featured_search_bar"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_35"
                    android:background="@drawable/sift_search_bg"
                    android:paddingLeft="@dimen/dp_15">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_38"
                        android:background="@null"
                        android:drawableLeft="@mipmap/search"
                        android:drawablePadding="@dimen/dp_10"
                        android:imeOptions="actionSearch"
                        android:text="一念天堂"
                        android:textColor="@color/gray_light"
                        android:textSize="@dimen/sp_15"
                        android:gravity="center_vertical" />
                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/featured_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/featured_header"
                android:fadingEdge="none"
                android:scrollbars="none"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.example.weiying.view.customview.ColorRelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:background="?attr/colorPrimary"
        android:paddingTop="@dimen/dp_26">

        <com.example.weiying.view.customview.ColorTextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="?attr/md_title_color" />
    </com.example.weiying.view.customview.ColorRelativeLayout>
</RelativeLayout>
