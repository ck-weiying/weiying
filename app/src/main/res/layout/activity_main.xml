<?xml version="1.0" encoding="utf-8"?>
<com.example.weiying.view.customview.ResideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resideLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity">

    <com.example.weiying.view.customview.ColorRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/menuBackground">
        <LinearLayout
            android:id="@+id/top_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/menu_sdv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_55"
                app:placeholderImage="@mipmap/photo"
                app:roundAsCircle="true"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/dp_10"
                android:text="微影，微一下"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_16" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_menu"
            android:layout_below="@+id/top_menu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menu_mine_collection"
                    style="@style/MenuStyle"
                    android:text="我的收藏" />

                <TextView
                    android:id="@+id/menu_mine_download"
                    style="@style/MenuStyle"
                    android:text="我的下载" />

                <TextView
                    android:id="@+id/menu_benefits"
                    style="@style/MenuStyle"
                    android:text="福利" />

                <TextView
                    android:id="@+id/menu_share"
                    style="@style/MenuStyle"
                    android:text="分享" />

                <TextView
                    android:id="@+id/menu_feedback"
                    style="@style/MenuStyle"
                    android:text="建议反馈" />

                <TextView
                    android:id="@+id/menu_settings"
                    style="@style/MenuStyle"
                    android:text="设置" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:padding="@dimen/dp_12"
                android:text="关于"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/menu_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:padding="@dimen/dp_12"
                android:text="主题"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_16" />

        </LinearLayout>
    </com.example.weiying.view.customview.ColorRelativeLayout>
    <com.example.weiying.view.customview.ColorRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hjm.bottomtabbar.BottomTabBar
                android:id="@+id/bottom_tab_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </com.example.weiying.view.customview.ColorRelativeLayout>
</com.example.weiying.view.customview.ResideLayout>